{
    "app-id": "io.gitlab.librewolf-community",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "21.08",
    "sdk": "org.freedesktop.Sdk",
    "add-extensions": {
        "org.freedesktop.Platform.ffmpeg-full": {
            "directory": "lib/ffmpeg",
            "version": "21.08",
            "add-ld-path": "."
        }
    },
    "command": "librewolf",
    "finish-args": [
        "--share=ipc",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--socket=pcsc",
        "--socket=pulseaudio",
        "--persist=.librewolf",
        "--filesystem=xdg-download:rw",
        "--filesystem=xdg-run/pipewire-0",
        "--device=dri",
        "--talk-name=org.freedesktop.FileManager1",
        "--system-talk-name=org.freedesktop.NetworkManager",
        "--talk-name=org.a11y.Bus",
        "--talk-name=org.gnome.SessionManager",
        "--talk-name=org.freedesktop.ScreenSaver",
        "--talk-name=org.gtk.vfs.*",
        "--env=MOZ_ENABLE_WAYLAND=1",
        "--env=MOZ_USE_XINPUT2=1",
        "--share=network"
    ],
    "modules": [
        "shared-modules/dbus-glib/dbus-glib-0.110.json",
        {
            "name": "librewolf",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p /app/lib",
                "mv librewolf.tar.bz2 /app/lib/librewolf",
                "install -D -m644 /app/lib/librewolf/browser/chrome/icons/default/default128.png /app/share/icons/hicolor/128x128/apps/io.gitlab.librewolf-community.png",
                "install -D -m644 /app/lib/librewolf/browser/chrome/icons/default/default128.png /app/usr/share/icons/hicolor/128x128/apps/io.gitlab.librewolf-community.png",
                "install -D -m644 /app/lib/librewolf/io.gitlab.librewolf-community.appdata.xml -t /app/share/metainfo",
                "install -D -m644 io.gitlab.librewolf-community.desktop -t /app/share/applications",
                "install -D -m755 librewolf.sh /app/bin/librewolf",
                "install -d /app/lib/ffmpeg"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://gitlab.com/api/v4/projects/12829184/packages/generic/librewolf/96.0.1-1/LibreWolf-96.0.1-1.aarch64.tar.bz2",
                    "sha256": "5c8e2f202ec713b28dc6f4888a1433aa92908bd9106328f010e28052fd1ca195",
                    "dest": "librewolf.tar.bz2",
                    "strip-components": 0,
                    "only-arches": [
                        "aarch64"
                    ]
                },
                {
                    "type": "archive",
                    "url": "https://gitlab.com/api/v4/projects/12829184/packages/generic/librewolf/96.0.1-1/LibreWolf-96.0.1-1.x86_64.tar.bz2",
                    "sha256": "e71384284a82d629ef9ebdc6fda70606aef801cacff889bcaa2d5af5f3e0de51",
                    "dest": "librewolf.tar.bz2",
                    "strip-components": 0,
                    "only-arches": [
                        "x86_64"
                    ]
                },
                {
                    "type": "file",
                    "path": "io.gitlab.librewolf-community.desktop"
                },
                {
                    "type": "file",
                    "path": "librewolf.sh"
                }
            ]
        }
    ]
}
